{
  "name": "sass-dry",
  "version": "1.0.0",
  "description": "DRY your SASS code.",
  "author": "Nicolas Gryman <ngryman@gmail.com> (https://github.com/ngryman)",
  "license": "MIT",
  "repository": "ngryman/sass-dry",
  "files": [
    "_dry.scss",
    "lib/"
  ],
  "scripts": {
    "lint": "# waiting: https://github.com/sasstools/sass-lint/issues/495 | sass-lint -vq",
    "doc": "sassdoc . docs -v",
    "spec": "mocha",
    "test": "npm run lint -s && npm run spec -s",
    "watch": "npm test; onchange {.,**}/*.scss -- npm test"
  },
  "keywords": [
    "dry",
    "dryer",
    "dynamic extend",
    "dynamic placeholder",
    "extend",
    "factorize",
    "mixin",
    "placeholder",
    "sass"
  ],
  "devDependencies": {
    "ava": "^0.20.0",
    "mocha": "^3.2.0",
    "onchange": "^3.0.2",
    "sassdoc": "~2.2.0",
    "sass-lint": "^1.5.0",
    "sass-true": "^2.0.3"
  },
  "engines": {
    "node": ">=4"
  }
}
